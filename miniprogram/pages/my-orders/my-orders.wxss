/* 容器样式 */
.container {
  padding: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 页面头部 */
.header {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: var(--spacing-md, 24rpx);
  background-color: var(--card-bg-color, #FFFFFF);
  box-shadow: var(--shadow-sm, 0 2rpx 8rpx rgba(59, 135, 222, 0.05));
  position: sticky;
  top: 0;
  z-index: 10;
}

.title {
  font-size: var(--font-lg, 36rpx);
  font-weight: bold;
  color: var(--text-primary, #333333);
}

/* 状态筛选器 */
.status-filter {
  background-color: #fff;
  padding: 20rpx 0 10rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  position: sticky;
  top: 100rpx;
  z-index: 99;
}

.filter-scroll {
  white-space: nowrap;
}

.filter-tabs {
  display: flex;
  padding: 0 20rpx;
}

.filter-tab {
  flex-shrink: 0;
  padding: 16rpx 32rpx;
  margin-right: 20rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  color: #666;
  background-color: #f8f8f8;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.filter-tab.active {
  color: #667eea;
  background-color: rgba(102, 126, 234, 0.1);
  border-color: #667eea;
  font-weight: 600;
}

/* 订单列表 */
.order-list {
  padding: 20rpx;
  flex: 1;
}

/* 订单卡片设计 */
.order-card {
  background-color: #FFFFFF;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
}

/* 订单头部 */
.order-header {
  padding: 24rpx;
  border-bottom: 1rpx solid #EAEAEA;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-info {
  display: flex;
  flex-direction: column;
}

.order-date {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 8rpx;
}

.order-id {
  font-size: 24rpx;
  color: #999999;
}

.order-status {
  font-size: 28rpx;
  font-weight: bold;
}

/* 商品展示 - 缩略图形式 */
.product-card {
  padding: 24rpx;
  background-color: #FFFFFF;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #F0F0F0;
}

.product-list {
  flex: 1;
}

.multi-product-images {
  display: flex;
  align-items: center;
}

.product-thumb {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 16rpx;
  background-color: #F6F6F6;
  object-fit: cover;
}

.single-product {
  display: flex;
}

.product-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex: 1;
}

.product-name {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 8rpx;
}

.product-specs {
  font-size: 24rpx;
  color: #999999;
}

.product-price-info {
  text-align: right;
  margin-left: 20rpx;
}

.price-amount {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
}

.product-count {
  font-size: 24rpx;
  color: #999999;
}

/* 订单底部 */
.order-footer {
  padding: 20rpx 24rpx;
  background-color: #FFFFFF;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.footer-space {
  flex: 1;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.detail-btn {
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 30rpx;
  border-radius: 6rpx;
  font-size: 26rpx;
  text-align: center;
  color: #666666;
  background-color: #F5F5F5;
  margin-left: 16rpx;
}

.pay-btn {
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 30rpx;
  border-radius: 6rpx;
  font-size: 26rpx;
  text-align: center;
  color: #FFFFFF;
  background-color: #3B87DE;
}

/* 更多商品提示 */
.more-products {
  padding: 20rpx 0 10rpx 0;
  text-align: center;
}

.more-text {
  font-size: 26rpx;
  color: #999;
  background-color: #f8f8f8;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  display: inline-block;
}

/* 订单总结 */
.order-summary {
  padding: 20rpx 30rpx;
  background-color: #fafbff;
  border-top: 1rpx solid #f0f0f0;
}

.payment-info {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-bottom: 12rpx;
}

.total-price {
  font-size: 36rpx;
  color: #333;
  font-weight: 700;
}

.refund-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #666;
  background-color: #fff2e8;
  padding: 12rpx 16rpx;
  border-radius: 12rpx;
  border-left: 4rpx solid #ff7928;
}

.refund-status {
  color: #ff7928;
  font-weight: 600;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f0f0f0;
  border-top: 4rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
  margin-top: 16rpx;
}

/* 无更多数据提示 */
.no-more-tip {
  text-align: center;
  padding: 40rpx 0;
  color: #ccc;
  font-size: 28rpx;
}

/* 空状态优化 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.6;
  margin-bottom: 40rpx;
}

.empty-title {
  font-size: 32rpx;
  color: #666;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 60rpx;
  line-height: 1.5;
}

.go-shopping-btn {
  background: linear-gradient(45deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  padding: 24rpx 48rpx;
  border-radius: 50rpx;
  font-size: 30rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 25rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.go-shopping-btn:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.4);
}