/* checkout.wxss */
.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  min-height: 100vh;
  background-color: #f8f8f8;
  padding-bottom: 120rpx;
}

/* 头部样式 */
.header {
  padding: 30rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 地址部分 */
.address-section {
  margin-top: 20rpx;
  background-color: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.wechat-address-btn {
  width: 100%;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
}

.wechat-address-btn text {
  font-size: 28rpx;
  color: #555;
}

.address-form {
  width: 100%;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  border-radius: 8rpx;
  background-color: #f5f5f5;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.input-error {
  border: 1rpx solid #ff4d4f;
}

.error-text {
  display: block;
  font-size: 24rpx;
  color: #ff4d4f;
  margin-top: 10rpx;
}

.textarea {
  width: 100%;
  height: 160rpx;
  border-radius: 8rpx;
  background-color: #f5f5f5;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.region-picker-view {
  width: 100%;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
}

.arrow {
  font-size: 20rpx;
  color: #999;
}

/* 订单商品 */
.order-items {
  margin-top: 20rpx;
  background-color: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.item-list {
  width: 100%;
}

.item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.item:last-child {
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 20rpx;
}

.item-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  margin-right: 24rpx;
  background-color: #f9f9f9;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  border: 1rpx solid #f0f0f0;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 10rpx 0;
}

.item-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  line-height: 1.4;
}

.item-price-qty {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: auto;
}

.item-price {
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: bold;
}

.item-qty {
  font-size: 28rpx;
  color: #666;
  background-color: #f5f5f5;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

/* 订单小计信息 */
.order-summary-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 10rpx;
  border-top: 1rpx dashed #eaeaea;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.order-count {
  font-size: 26rpx;
  color: #666;
}

.order-subtotal {
  font-size: 26rpx;
  color: #666;
}

.price-highlight {
  font-size: 30rpx;
  color: #ff4d4f;
  font-weight: bold;
}

/* 价格信息 */
.price-section {
  margin-top: 20rpx;
  background-color: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.price-list {
  width: 100%;
}

.price-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 10rpx;
}

.price-item .label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 0;
}

.price-item .value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.price-item .discount {
  color: #52c41a;
  font-weight: bold;
}

.price-divider {
  height: 1rpx;
  background-color: #f0f0f0;
  margin: 16rpx 0;
}

.price-item.total {
  padding-top: 16rpx;
}

.price-item.total .label {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.price-item.total .total-price {
  font-size: 36rpx;
  color: #ff4d4f;
  font-weight: bold;
}

/* 提交订单 */
.submit-section {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
  border-top: 1rpx solid #f0f0f0;
}

.submit-info {
  display: flex;
  align-items: center;
}

.total-label {
  font-size: 28rpx;
  color: #333;
  margin-right: 8rpx;
}

.total-price {
  font-size: 36rpx;
  color: #ff4d4f;
  font-weight: bold;
  margin-right: 10rpx;
}

.item-count {
  font-size: 24rpx;
  color: #999;
}

.submit-btn {
  min-width: 220rpx;
  height: 80rpx;
  background-color: #ff4d4f;
  color: #fff;
  font-size: 32rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  letter-spacing: 2rpx;
  border: none;
  box-shadow: 0 4rpx 8rpx rgba(255, 77, 79, 0.2);
}

.submit-btn.disabled {
  background-color: #ccc;
  box-shadow: none;
}

/* 地址栏样式 - 新 */
.address-bar {
  margin-top: 2rpx;
  background-color: #fff;
  padding: 30rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.address-icon {
  margin-right: 20rpx;
}

.icon {
  font-size: 40rpx;
  color: #4CAF50;
}

.address-info {
  flex: 1;
}

.address-label {
  font-size: 30rpx;
  color: #666;
}

.address-content {
  display: flex;
  flex-direction: column;
}

.address-detail {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.delivery-to {
  font-size: 28rpx;
  color: #999;
  margin-right: 10rpx;
}

.address-text {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.contact-info {
  display: flex;
  align-items: center;
}

.contact-name {
  font-size: 28rpx;
  color: #666;
  margin-right: 30rpx;
}

.contact-phone {
  font-size: 28rpx;
  color: #666;
}

.address-arrow {
  margin-left: 20rpx;
}

.arrow-icon {
  font-size: 28rpx;
  color: #999;
}

/* 备注区域 - 订单商品中 */
.remark-section {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx dashed #eee;
}

.remark-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.remark-input {
  width: 100%;
  height: 120rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
} 