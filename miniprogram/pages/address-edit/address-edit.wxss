.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  min-height: 100vh;
  background-color: #f8f8f8;
  padding-bottom: 120rpx;
}

/* 头部样式 */
.header {
  padding: 30rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 表单容器 */
.form-container {
  width: 100%;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  background-color: #fff;
  margin-top: 20rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.input {
  width: 100%;
  height: 90rpx;
  border-radius: 0;
  background-color: #ffffff;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  border-bottom: 1rpx solid #eee;
}

.input-error {
  border: 1rpx solid #ff4d4f;
}

.picker-error {
  border: 1rpx solid #ff4d4f;
}

.error-text {
  display: block;
  font-size: 24rpx;
  color: #ff4d4f;
  margin-top: 10rpx;
}

/* 地址选择器区域 */
.address-selector {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 20rpx;
}

.region-picker-view {
  flex: 1;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
}

.location-select-btn {
  width: 160rpx;
  height: 80rpx;
  background-color: #f0f9ff;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid #d9ecff;
}

.location-text {
  font-size: 26rpx;
  color: #1890ff;
}

.arrow {
  font-size: 20rpx;
  color: #999;
}

/* 详细地址 */
.detail-address-container {
  position: relative;
  width: 100%;
}

.textarea {
  width: 100%;
  height: 160rpx;
  border-radius: 0;
  background-color: #ffffff;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  border-bottom: 1rpx solid #eee;
}

.location-btn {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 30rpx;
}

.location-icon {
  font-size: 36rpx;
}

/* 标签 */
.tag-group {
  display: flex;
  flex-wrap: wrap;
}

.tag {
  padding: 8rpx 40rpx;
  border-radius: 0;
  background-color: #ffffff;
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid #ddd;
}

.tag-selected {
  background-color: #ffffff;
  color: #333;
  border: 1rpx solid #4caf50;
}

/* 开关 */
.switch-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.switch-item .label {
  margin-bottom: 0;
}

/* 提示文字 */
.tip-text {
  font-size: 24rpx;
  color: #999;
  margin-top: -20rpx;
  margin-bottom: 30rpx;
}

/* 底部保存按钮 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  padding: 20rpx;
  box-sizing: border-box;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.save-btn {
  width: 100%;
  height: 80rpx;
  background-color: #4caf50;
  color: white;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 40rpx;
  letter-spacing: 4rpx;
}

/* 地址选择器区域 - 新样式 */
.address-select-row {
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #eee;
  box-sizing: border-box;
}

.address-placeholder {
  font-size: 28rpx;
  color: #999;
  flex: 1;
}

.address-text {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.address-arrow {
  font-size: 28rpx;
  color: #999;
  margin-left: 10rpx;
} 